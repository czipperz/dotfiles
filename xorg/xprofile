# -*- shell-script -*-

xset m 0 0
[ -e /etc/xfluxd-args.conf ] && systemctl --user restart xfluxd-args
[ -e /usr/bin/emacs ]        && emacs --daemon >/dev/null 2>&1 &
[ -e /bin/steam ]            && steam -silent &
[ -e /usr/bin/mpd ]          && mpd 2>/dev/null

xmodmap "$HOME/.Xmodmap"
xrdb -I"$HOME" "$HOME/.Xresources"

# exec awesome
